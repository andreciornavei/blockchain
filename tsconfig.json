{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "allowJs": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "."
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "include": [
      "./src/**/*"
    ]
  }